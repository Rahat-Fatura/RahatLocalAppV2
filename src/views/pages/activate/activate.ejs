<%- include('../../partials/doctype.ejs') %>

<head>
    <%- include('../../partials/header') %>
    <title><%= page.display %> - <%= app.name %></title>
    <%- include('../../partials/theme_css') %>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-navbar-full layout-horizontal layout-without-menu">
        <div class="layout-container">
            <!-- Navbar -->
            <%- include('../../partials/navbar') %>
            <!-- / Navbar -->

            <!-- Layout container -->
            <div class="layout-page">
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="d-flex align-items-center justify-content-center h-px-500">
                            <div class="w-px-600 rounded p-3 p-md-5 bg-white shadow-lg">
                                <h3 class="mb-4">Aktivasyon</h3>
                                <h6 id="error"></h6>
                                <div class="mt-2 mb-3">
                                    <label class="form-label" for="apikey">Key bilgisini giriniz</label>
                                    <input id="apikey" name="apikey" class="form-control form-control-lg" type="text" placeholder="********-****-****-****-************">
                                </div>
                                <div class="d-grid">
                                    <button id="activateBtn" class="btn btn-primary waves-effect waves-light">Aktive Et</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / Content -->
                    <!-- Footer -->
                    <%- include('../../partials/footer') %>
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    <%- include('../../partials/theme_js') %>
</body>

</html>
